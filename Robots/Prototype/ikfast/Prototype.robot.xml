<!-- +X is forward, +Y is left, +Z is up -->
<robot name="Prototype">
	<kinbody>
		<body name="body" type="dynamic">
			<translation>0.0 0.0 0.0</translation>
			<!-- popsicle stick is 1.14 long, 0.09 wide -->
			<!-- to line up, sides move (sincos(60) * 1.14 - 0.09) / 2 -->
			<geom type="box">
				<extents>0.045 0.57 0.02</extents>
				<translation>0.00 0.00 0.02</translation>
			</geom>
			<geom type="box">
				<extents>0.045 0.57 0.02</extents>
				<translation>-0.4486 0.2625 0.02</translation>
				<rotationaxis>0 0 -1 60</rotationaxis>
			</geom>
			<geom type="box">
				<extents>0.045 0.57 0.02</extents>
				<translation>-0.4486 -0.2625 0.02</translation>
				<rotationaxis>0 0 1 60</rotationaxis>
			</geom>

			<!-- servo aiming -X, body to -Y, width is Z -->
			<geom type="box">
				<extents>0.11 0.11 0.06</extents>
				<translation>0.16 -0.06 0.00</translation>

				<translation>-1.045 0.00 -0.075</translation>
			</geom>
			<geom type="cylinder">
				<radius>0.06</radius>
				<height>0.05</height>
				<rotationaxis>0 0 1 90</rotationaxis>
				<translation>0.025 0.00 0.00</translation>

				<translation>-1.045 0.00 -0.075</translation>
			</geom>

		</body>

		<body name="backhip" type="dynamic">
			<offsetfrom>body</offsetfrom>
			<translation>-1.045 0.00 -0.075</translation>
			<rotationaxis>1 0 0 -10</rotationaxis>

			<!-- servo horn aiming -X, large part to +Z -->
			<geom type="cylinder">
				<radius>0.035</radius>
				<height>0.03</height>
				<rotationaxis>0 0 1 90</rotationaxis>
				<translation>-0.015 0.00 0.00</translation>
			</geom>
			<geom type="box">
				<extents>0.01 0.06 0.02</extents>
				<translation>-0.04 0.00 0.00</translation>
			</geom>
			<geom type="box">
				<extents>0.01 0.025 0.085</extents>
				<translation>-0.04 0.00 0.105</translation>
			</geom>
			<geom type="box">
				<extents>0.01 0.025 0.075</extents>
				<translation>-0.04 0.00 -0.095</translation>
			</geom>

			<!-- servo aiming +Y, body to -Z, width is X -->
			<geom type="box">
				<extents>0.06 0.11 0.11</extents>
				<translation>0.00 -0.16 -0.06</translation>

				<!-- servo depth: 0.06
				     tape depth: 0.015
				     horn depth: 0.05 -->
				<translation>-0.125 0.17 0.03</translation>
			</geom>
			<geom type="cylinder">
				<radius>0.06</radius>
				<height>0.05</height>
				<rotationaxis>0 1 0 90</rotationaxis>
				<translation>0.00 -0.025 0.00</translation>

				<translation>-0.125 0.17 0.03</translation>
			</geom>
		</body>
		<joint name="backaiminghip" type="hinge">
			<body>body</body>
			<body>backhip</body>
			<offsetfrom>backhip</offsetfrom>
			<axis>-1 0 0</axis>
			<initial>1.570796326794</initial>
		</joint>

		<body name="backthigh" type="dynamic">
			<offsetfrom>backhip</offsetfrom>
			<translation>-0.125 0.17 0.03</translation>
			<rotationaxis>1 0 0 10</rotationaxis>

			<!-- servo horn aiming +Y, large part to -X, small parts are Z -->
			<geom type="cylinder">
				<radius>0.035</radius>
				<height>0.03</height>
				<rotationaxis>0 1 0 90</rotationaxis>
				<translation>0.00 0.015 0.00</translation>
			</geom>
			<geom type="box">
				<extents>0.02 0.01 0.06</extents>
				<translation>0.00 0.04 0.00</translation>
			</geom>
			<geom type="box">
				<extents>0.085 0.01 0.025</extents>
				<translation>-0.105 0.04</translation>
			</geom>
			<geom type="box">
				<extents>0.075 0.01 0.025</extents>
				<translation>0.095 0.04</translation>
			</geom>

			<geom type="cylinder">
				<radius>0.04</radius>
				<height>0.94</height>
				<rotationaxis>0 0 1 90</rotationaxis>
				<!-- pencil length: 0.94
				     horn tip: 0.095 + 0.075
				     -pencil / 2 + horn = -0.30 -->
				<translation>-0.30 0.09 0.00</translation>
			</geom>

			<!-- old:servo aiming +Y, body to -Z, width is X -->
			<!-- servo aiming -Y, body to -X, width is Z -->
			<geom type="box">
				<extents>0.11 0.11 0.06</extents>
				<translation>-0.06 0.16 0.00</translation>

				<!-- X horn tip: 0.095 + 0.075
				     - pencil length: 0.94
				     + servo center: 0.11
				     + servo offset: 0.06 -->
				<!-- Y horn depth: 0.05
				     - servo height: 0.05 + 0.22 -->
				<translation>-0.60 -0.22 0.00</translation>
			</geom>
			<geom type="cylinder">
				<radius>0.06</radius>
				<height>0.05</height>
				<rotationaxis>0 1 0 90</rotationaxis>
				<translation>0.00 0.025 0.00</translation>

				<translation>-0.60 -0.22 0.00</translation>
			</geom>
		</body>
		<joint name="backliftinghip" type="hinge">
			<body>backhip</body>
			<body>backthigh</body>
			<offsetfrom>backhip</offsetfrom>
			<translation>-0.125 0.17 0.03</translation>
			<axis>0 1 0</axis>
			<initial>1.570796326794</initial>
		</joint>

		<body name="backcalf" type="dynamic">
			<offsetfrom>backthigh</offsetfrom>
			<translation>-0.60 -0.22 0.00</translation>

			<translation>0.00 -0.09 -0.76</translation>
			
			<!-- servo horn aiming -Y, large part -Z?, small parts are X -->
			<geom type="cylinder">
				<radius>0.035</radius>
				<height>0.03</height>
				<rotationaxis>0 1 0 90</rotationaxis>
				<translation>0.00 -0.015 0.00</translation>

				<translation>0.00 0.09 0.76</translation>
			</geom>
			<geom type="box">
				<extents>0.06 0.01 0.02</extents>
				<translation>0.00 -0.04 0.00</translation>

				<translation>0.00 0.09 0.76</translation>
			</geom>
			<geom type="box">
				<extents>0.025 0.01 0.085</extents>
				<translation>0.00 -0.04 -0.105</translation>

				<translation>0.00 0.09 0.76</translation>
			</geom>
			<geom type="box">
				<extents>0.025 0.01 0.075</extents>
				<translation>0.00 -0.04 0.095</translation>

				<translation>0.00 0.09 0.76</translation>
			</geom>

			<geom type="cylinder">
				<radius>0.04</radius>
				<height>0.93</height>
				<rotationaxis>1 0 0 90</rotationaxis>
				<translation>0.00 -0.09 -0.295</translation>

				<translation>0.00 0.09 0.76</translation>
			</geom>
		</body>
		<joint name="backknee" type="hinge">
			<body>backthigh</body>
			<body>backcalf</body>
			<offsetfrom>backcalf</offsetfrom>
			<translation>0.00 0.09 0.76</translation>
			<axis>0 -1 0</axis>
			<initial>1.570796326794</initial>
		</joint>
	</kinbody>
</robot>
